<Window x:Class="wpfbinding.View2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Example 2: Direct binding" 
        Width="300" SizeToContent="Height">
    <StackPanel>
        <DockPanel>
            <Label DockPanel.Dock="Left" FontWeight="Bold" Content="Data:"/>
            <TextBox DockPanel.Dock="Left" MinWidth="100" Text="{Binding Data}"/>
        </DockPanel>
        <DataGrid ItemsSource="{Binding CalculatedResults}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Formula" Binding="{Binding Formula}"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
